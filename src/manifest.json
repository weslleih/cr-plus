{
    "manifest_version": 3,
    "name": "CR Plus",
    "description": "Chrome extension to improve some Crunchyroll functions and interfaces",
    "version": "0.1",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [
        {
            "js": ["scripts/simulcastcalendar.js"],
            "matches": [
                "https://www.crunchyroll.com/*simulcastcalendar*"
            ]
        }
    ]
}